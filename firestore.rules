rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // âœ… HELPER FUNCTION
    // Checks the 'role' field in the user's document inside the 'users' collection
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // 1. Users Collection
    match /users/{userId} {
      allow read: if request.auth != null;
      // Admin can change roles, User can update their own profile
      allow write: if isAdmin() || request.auth.uid == userId;
    }

    // 2. Seminar Halls Collection
    match /seminarHalls/{hallId} {
      allow read: if request.auth != null;
      // Only Admins can create/update/delete halls
      allow write: if isAdmin();
    }

    // 3. Bookings Collection
    match /bookings/{bookingId} {
      // Anyone can create a booking
      allow create: if request.auth != null;
      
      // Users read their own; Admins read all
      allow read: if isAdmin() || resource.data.requesterId == request.auth.uid;
      
      // Users can ONLY cancel; Admins can do anything (approve/reject)
      allow update: if isAdmin() 
                    || (resource.data.requesterId == request.auth.uid &&
                        request.resource.data.status == 'Cancelled');
      
      // Only Admin can delete
      allow delete: if isAdmin();
    }

    // 4. Notifications Collection
    match /notifications/{notificationId} {
      allow read: if request.auth.uid == resource.data.userId;
      // Anyone can create notifications (faculty when booking, admins when responding)
      allow create: if request.auth != null;
      allow update: if request.auth.uid == resource.data.userId;
    }

    // 5. Admin Directory - list of admin UIDs
    // Any authenticated user can read the directory; any user can write (system maintains it)
    match /adminDirectory/{adminId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if request.auth != null;
    }
  }
}